{
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  "material-icon-theme.activeIconPack": "react",
  "files.exclude": {
    "**/.git": true,
    ".eslintrc.json": true,
    ".eslintignore": true,
    "postcss.config.js": true,
    ".prettierrc": true,
  },
  "material-icon-theme.folders.associations": {
    "componentes": "react-components",
    "rotas": "routes",
    "paginas": "views",
    "configuracao": "config",
    "documentacao": "docs",
    "estilização": "css",
    "validacoes": "rules",
    "idiomas": "i18n"
  },
  "typescript.preferences.quoteStyle": "double",
  "editor.minimap.enabled": true, // ativa o minimap
  "editor.wordWrap": "on", // ativa a quebra de linha automatica
  "editor.renderWhitespace": "boundary", // espaço em branco destacado no limite da linha
  "editor.cursorSmoothCaretAnimation": "on", //adiciona animação suave ao cursor
  "editor.suggest.snippetsPreventQuickSuggestions": false, // snippets sugeridos na digitação
  "editor.insertSpaces": true, // editor insere espaços em vez de tabs
  "editor.tabSize": 2, // identação é 2 espaços
  "editor.formatOnSave": true, // formatação automática do código ao salvar o arquivo
  "editor.formatOnType": true, // formatação automática enquanto digita
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.addMissingImports": "explicit"
  }, // ações automáticas que devem ser executadas ao salvar um arquivo
}